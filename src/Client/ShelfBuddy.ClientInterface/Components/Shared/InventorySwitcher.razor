@using ShelfBuddy.ClientInterface.Services
@using ShelfBuddy.Contracts
@inject IInventoryStateService InventoryStateService
@inject IUserService UserService
@inject NavigationManager NavigationManager
@inject IJSRuntime JsRuntime
@implements IDisposable

<div class="inventory-switcher">
    @if (_isLoading)
    {
        // Display nothing until loading is complete
    }
    else if (IsError)
    {
        <button class="btn btn-sm btn-outline-light" @onclick="LoadUserAndInventoriesAsync">
            <i class="bi bi-exclamation-triangle"></i> Error loading inventories
        </button>
    }
    else if (InventoryStateService.CurrentInventory is null)
    {
        <button class="btn btn-sm btn-outline-light" @onclick="NavigateToInventories">
            <i class="bi bi-box"></i> Select Inventory
        </button>
    }
    else
    {
        <div class="dropdown">
            <button class="btn btn-sm btn-outline-light dropdown-toggle" type="button"
            @onclick:stopPropagation="true" @onclick="ToggleDropdown">
                <i class="bi bi-box"></i> @InventoryStateService.CurrentInventory.Name
            </button>
            @if (_isOpen)
            {
                <div class="dropdown-menu show" @onclick:stopPropagation="true">
                    <h6 class="dropdown-header">Your Inventories</h6>
                    @foreach (var inventory in _inventories)
                    {
                        <button class="dropdown-item @(InventoryStateService.CurrentInventory?.Id == inventory.Id ? "active" : "")"
                        @onclick="() => SwitchInventoryAsync(inventory.Id)">
                            @inventory.Name
                        </button>
                    }
                    <div class="dropdown-divider"></div>
                    <button class="dropdown-item" @onclick="NavigateToInventories">
                        <i class="bi bi-grid"></i> View All Inventories
                    </button>
                    <button class="dropdown-item" @onclick="NavigateToNewInventory">
                        <i class="bi bi-plus-circle"></i> Create New Inventory
                    </button>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<InventoryDto> _inventories = [];
    private bool _isLoading = true;
    private bool _isOpen;
    private bool IsError => InventoryStateService.IsError;
    private DotNetObjectReference<InventorySwitcher>? _dotNetObjectReference;
    private bool _jsInitialized;

    protected override async Task OnInitializedAsync()
    {
        InventoryStateService.OnInventoryChanged += OnInventoryChanged;
        InventoryStateService.OnInventoryListChanged += OnInventoryChanged;
        _isLoading = true;
        if (!InventoryStateService.IsInitialized && !InventoryStateService.IsLoading)
        {
            await Task.Delay(500);
            if (!InventoryStateService.IsLoading)
            {
                await LoadUserAndInventoriesAsync();
                _isLoading = false;
                return;
            }
        }

        while (!InventoryStateService.IsInitialized)
        {
            await Task.Delay(100);
        }
        _isLoading = false;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender || _jsInitialized)
        {
            return;
        }

        try
        {
            _dotNetObjectReference = DotNetObjectReference.Create(this);

            // Initialize our click outside handler using the JavaScript namespace
            var success = await JsRuntime.InvokeAsync<bool>(
                "inventorySwitcher.initialize",
                _dotNetObjectReference
            );

            _jsInitialized = success;

            if (!success)
            {
                Console.WriteLine("Failed to initialize inventory switcher JavaScript");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error initializing JS interop: {ex.Message}");
        }
    }

    private void OnInventoryChanged()
    {
        _inventories = InventoryStateService.UserInventories;
        StateHasChanged();
    }

    private async Task LoadUserAndInventoriesAsync()
    {
        _isLoading = true;
        StateHasChanged();

        var user = await UserService.GetCurrentUserAsync();
        if (user is not null)
        {
            await InventoryStateService.LoadUserInventoriesAsync(user.Id);
            _inventories = InventoryStateService.UserInventories;
        }

        _isLoading = false;
        StateHasChanged();
    }

    private void NavigateToInventories()
    {
        _isOpen = false;
        NavigationManager.NavigateTo("/inventories");
    }

    private void NavigateToNewInventory()
    {
        _isOpen = false;
        NavigationManager.NavigateTo("/inventory/new");
    }

    private async Task SwitchInventoryAsync(Guid? inventoryId)
    {
        _isOpen = false;
        await InventoryStateService.SetCurrentInventoryAsync(inventoryId);

        if (inventoryId is null)
        {
            return;
        }

        var currentUri = NavigationManager.Uri;
        var isOnDetailsPage = System.Text.RegularExpressions.Regex.IsMatch(
            currentUri,
            @"/inventory/[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
        );

        if (isOnDetailsPage)
        {
            await InventoryStateService.NotifyInventoryPageRefreshRequestedAsync();
            return;
        }

        NavigationManager.NavigateTo($"/inventory/{inventoryId}");
    }

    private void ToggleDropdown()
    {
        _isOpen = !_isOpen;
        StateHasChanged();
    }
    
    [JSInvokable]
    public void HandleClickOutside()
    {
        if (!_isOpen)
        {
            return;
        }

        _isOpen = false;
        StateHasChanged();
    }
    
    public async void Dispose()
    {
        try
        {
            InventoryStateService.OnInventoryChanged -= OnInventoryChanged;
            InventoryStateService.OnInventoryListChanged -= OnInventoryChanged;

            if (_dotNetObjectReference is null || !_jsInitialized)
            {
                return;
            }

            // Clean up JavaScript resources
            await JsRuntime.InvokeAsync<bool>("inventorySwitcher.dispose");
            _dotNetObjectReference.Dispose();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error disposing InventorySwitcher: {ex.Message}");
        }
    }
}
